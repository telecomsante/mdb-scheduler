{
  "name": "mdb-scheduler",
  "version": "1.2.0",
  "description": "Mini agenda-like node scheduler",
  "main": "index.js",
  "scripts": {
    "check": "xo",
    "fix": "xo --fix",
    "test": "npx c8 ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telecomsante/mdb-scheduler.git"
  },
  "author": "Florian Le Roux <florian.leroux@telecomsante.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/telecomsante/mdb-scheduler/issues"
  },
  "homepage": "https://github.com/telecomsante/mdb-scheduler#readme",
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.6.0",
    "xo": "^0.37.1"
  },
  "xo": {
    "space": 2,
    "rules": {
      "unicorn/no-array-reduce": "off",
      "promise/prefer-await-to-then": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "ava": {
    "files": [
      "test/testfiles/**/*-test.js"
    ]
  },
  "c8": {
    "reporter": [
      "json",
      "lcov",
      "text-summary"
    ]
  }
}
